<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/title_page"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/book1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_title"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="141dp" />

            <EditText
                android:id="@+id/edittext_shop_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="141dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTileAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="141dp" />

            <EditText
                android:id="@+id/edittext_shop_item_title_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="141dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTileTranslator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Translator"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="141dp" />

            <EditText
                android:id="@+id/edittext_shop_item_title_translator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="141dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTilePublisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="141dp" />

            <EditText
                android:id="@+id/edittext_shop_item_title_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="141dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTilePutDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PutDate"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="141dp" />

            <EditText
                android:id="@+id/edittext_shop_item_title_put_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="141dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTileISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISBN"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="141dp" />

            <EditText
                android:id="@+id/edittext_shop_item_title_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textNoSuggestions"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="141dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"></Button>
    </LinearLayout>
</FrameLayout>